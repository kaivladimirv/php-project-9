{% extends 'base.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-12 col-md-10 col-lg-8 mx-auto border rounded-3 bg-light p-5">
            <h1 class="display-3">Анализатор страниц</h1>
            <p class="lead">Бесплатно проверяйте сайты на SEO пригодность</p>

            <form action="{{ url_for('addUrl') }}" method="post" class="d-flex flex-wrap flex-sm-nowrap">
                <div class="flex-grow-1">
                    <input type="text" name="url[name]" value=""
                           class="form-control form-control-lg {% if errors.name %}is-invalid{% endif %}"
                           placeholder="https://www.example.com">
                    {% if errors.name %}
                        <p class="invalid-feedback">{{ errors.name|first }}</p>
                    {% endif %}
                </div>

                <div class="col-lg-3 flex-grow-1">
                    <input type="submit" class="btn btn-primary btn-lg ms-3 px-5 text-uppercase mx-3" value="Проверить">
                </div>
            </form>
        </div>
    </div>
{% endblock %}
